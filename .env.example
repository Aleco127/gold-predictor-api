# Gold Predictor Environment Configuration
# =========================================

# Data Source Selection: "capital" or "mt5"
DATA_SOURCE=capital

# Capital.com API Configuration (PRIMARY)
# Get your API key from Capital.com > Settings > API Integrations
CAPITAL_API_KEY=your_capital_api_key
CAPITAL_PASSWORD=your_capital_password
CAPITAL_IDENTIFIER=your_capital_api_key
CAPITAL_DEMO=true

# MetaTrader 5 Configuration (BACKUP)
MT5_LOGIN=your_demo_login
MT5_PASSWORD=your_demo_password
MT5_SERVER=Capital.com-Demo

# API Security (for Gold Predictor API)
API_KEY=your_generated_api_key_here

# Trading Configuration
SYMBOL=GOLD
TIMEFRAME=M5

# Model Configuration
MODEL_LOOKBACK=60
PREDICTION_HORIZON=1
CONFIDENCE_THRESHOLD=0.7

# Scheduler Configuration
PREDICTION_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./predictions.db

# Telegram Notifications (via n8n)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# News API Configuration (for sentiment analysis)
# Get your free API key from https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key
NEWS_CACHE_DURATION_MINUTES=30
